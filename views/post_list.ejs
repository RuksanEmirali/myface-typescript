<html lang="en-gb">
<%- include('_head') -%>
    <%- include('_header') -%>

        <body>
            <h1>Posts</h1>
            <ol>
                <% postList.results.forEach(function(post) {%>
                    <li>
                        <%= post.postedBy.name %>
                        <%= post.userId %>
                         <br>
                         <%= post.message %> <br>
                         <%= format(post.createdAt, "yyyy-MM-dd HH:mm:ss" ) %> <br>
                                <img src=<%=post.imageUrl%> >
                    </li>
                    <% }); %>
            </ol>
            <%if (postList.next) { %>
                <a href="<%= postList.next %>">Next</a>
            <% } %>
            <%if (postList.previous) { %>
                <a href="<%= postList.previous %>">Previous</a>
            <% } %>
        </body>
        <%- include('_footer') -%>

</html>